{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "*" : ["/*"]
    },
    "declaration": true
  },
  "inlcude": [
    "src/*",
    "src/**/*"
  ]
}